<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">

    <fragment
        android:id="@+id/title"
        android:name="com.example.myapplication.Fragment_title_Activity"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/fragment_btn1"
        android:text="显示Fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/fragment_btn2"
        android:text="显示Fragment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="移除fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remove_btn"
        android:layout_above="@+id/fragment_btn1"
        android:layout_alignParentStart="true" />

    <Button
        android:text="替换fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_btn1"
        android:layout_centerHorizontal="true"
        android:id="@+id/replace_btn" />

    <Button
        android:text="隐藏fragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/remove_btn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:id="@+id/fragment_hide1" />

    <Button
        android:text="显示fragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_show"
        android:layout_marginStart="14dp"
        android:layout_alignBaseline="@+id/fragment_hide1"
        android:layout_alignBottom="@+id/fragment_hide1"
        android:layout_toEndOf="@+id/fragment_hide1" />

    <Button
        android:text="隐藏fragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_hide1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/fragment_hide2" />

    <Button
        android:text="显示fragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_show2"
        android:layout_alignBaseline="@+id/fragment_hide2"
        android:layout_alignBottom="@+id/fragment_hide2"
        android:layout_alignStart="@+id/fragment_show" />
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>
