<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_counter"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.counter.counterActivity">

    <EditText
        android:text="0"
        android:textColor="#000"
        android:textSize="50dp"
        android:background="@drawable/shape"
        android:gravity="right|center"
        android:layout_width="352dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:editable="false"
        android:focusable="false"
        android:ems="10"
        android:id="@+id/editText1" />

    <LinearLayout
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/editText1">

        <Button
            android:text="AC"
            android:textSize="47dp"
            android:layout_width="85sp"
            android:layout_height="85sp"
            android:id="@+id/button_AC" />

        <Button

            android:text="C"
            android:textSize="50dp"
            android:layout_width="85sp"
            android:layout_height="85sp"
            android:id="@+id/button_C" />
        <Button
            android:text="%"
            android:textSize="50dp"

            android:layout_width="85sp"
            android:layout_height="85sp"
            android:id="@+id/button_del" />

        <Button

            android:text="รท"
            android:textSize="50dp"
            android:layout_width="85sp"
            android:layout_height="85sp"
            android:id="@+id/button_divide" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_2"
        android:layout_below="@+id/button_1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button7"
            android:text="7"
            android:textSize="50dp"
            android:layout_height="85dp"
            android:layout_width="85dp">
</Button>
        <Button
            android:id="@+id/button8"
            android:layout_marginLeft="7dp"
            android:text="8"
            android:textSize="50dp"

            android:layout_height="85dp"
            android:layout_width="85dp">
        </Button>
        <Button
            android:id="@+id/button9"
            android:layout_marginLeft="7dp"
            android:text="9"
            android:textSize="50dp"
            android:layout_height="85dp"
            android:layout_width="85dp">
        </Button>
        <Button
            android:id="@+id/button_ride"
            android:layout_marginLeft="7dp"
            android:text="ร"
            android:textSize="50dp"
            android:layout_height="85dp"
            android:layout_width="85dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:textColor="@color/black"
            android:text="4"
            android:textSize="50dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/button4" />
        <Button
            android:layout_marginLeft="7dp"
            android:text="5"
            android:textSize="50dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/button5" />
        <Button
            android:layout_marginLeft="7dp"
            android:text="6"
            android:textSize="50dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/button6" />

        <Button
            android:layout_marginLeft="7dp"
            android:text="-"
            android:textSize="50dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/button_minus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_4"
        android:layout_below="@+id/button_3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:textSize="50dp"
            android:text="1"
            android:id="@+id/button1">
        </Button>
        <Button
            android:layout_marginLeft="7dp"
            android:id="@+id/button2"
            android:text="2"
            android:textSize="50dp"
            android:layout_width="85dp"
            android:layout_height="85dp" />
        <Button
            android:layout_marginLeft="7dp"
            android:id="@+id/button3"
            android:text="3"
            android:textSize="50dp"
            android:layout_width="85dp"
            android:layout_height="85dp"></Button>
        <Button
            android:layout_marginLeft="7dp"
            android:id="@+id/button_add"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="+"
            android:textSize="50dp"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_5"
        android:layout_below="@+id/button_4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button0"
            android:text="0"
            android:textSize="50dp"
            android:layout_width="150dp"
            android:layout_height="85dp">
        </Button>

        <Button
            android:id="@+id/button_dot"
            android:text="."
            android:textSize="50dp"
            android:layout_height="85dp"
            android:layout_width="85dp">
        </Button>
        <Button
            android:id="@+id/button_equals"
            android:text="="
            android:textSize="50dp"
            android:layout_width="match_parent"
            android:layout_height="85dp" />
    </LinearLayout>
</RelativeLayout>
